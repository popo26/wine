<%- include("partials/header")%>

<nav class="navbar">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1"></span>
    <a class="btn btn-secondary btn-lg" href="/login" role="button">LogIn</a>
  </div>
</nav>

<div class="register-div">
  <!-- <h1>Register</h1> -->
  <form action="/register" method="post">
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" name="username" class="form-control" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">Fake email is all good.</div>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" name="password" class="form-control" placeholder="First time">
    </div>
    <div class="mb-3">
      <label for="confirmPassword" class="form-label">Confirm Password</label>
      <input type="password" name="confirmPassword" class="form-control" placeholder="Second time">
    </div>
    <button type="submit" class="btn btn-light">Register</button>
  </form>
</div>

<h1>Or <i class="fa-sharp fa-solid fa-wine-bottle"></i></h1>

<div class="col-sm-4 register-div">
  <div class="card social-block">
    <div class="card-body">
      <a href="/auth/google" class="btn btn-block btn-social btn-google" role="button"><i class="fa-brands fa-google"></i>Sign Up with Google</a>
    </div>
  </div>

  <div class="card social-block">
    <div class="card-body">
      <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook" role="button"><i class="fa-brands fa-facebook"></i>Sign Up with Facebook</a>
    </div>
  </div>
</div>

<%- include("partials/footer")%>